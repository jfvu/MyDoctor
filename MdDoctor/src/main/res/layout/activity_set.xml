<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_set"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_set">
        <ImageView
            android:id="@+id/img_back_activity_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户设置"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_message_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_title_activity_set"
        android:layout_marginTop="18px"
        android:background="#ffffff">
        <TextView
            android:text="消息通知"
            style="@style/personaldata_font_left"/>
        <ToggleButton
            android:id="@+id/tb_message_activity_set"
            android:layout_width="112px"
            android:layout_height="56px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:background="@android:color/transparent"
            android:button="@drawable/select_tb"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_clause_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_message_activity_set"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:visibility="gone">
        <TextView
            android:text="条款"
            style="@style/personaldata_font_left"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_privacy_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_clause_activity_set"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:text="隐私与政策"
            style="@style/personaldata_font_left"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_about_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_privacy_activity_set"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:text="关于我们"
            style="@style/personaldata_font_left"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_about_activity_set"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:visibility="gone">
        <TextView
            android:text="客服电话"
            style="@style/personaldata_font_left"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_idea_activity_set"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_phone_activity_set"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:visibility="gone">
        <TextView
            android:text="意见反馈"
            style="@style/personaldata_font_left"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <Button
        android:id="@+id/but_out_activity_set"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:text="退出"
        android:textSize="32px"
        android:textColor="#4dc699"/>
</RelativeLayout>