<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_statusbar_activity_account"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/rl_title_activity_account"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/ll_statusbar_activity_account"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back_activity_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:padding="28px"
            android:src="@drawable/personaldata_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="绑定银行"
            android:textColor="#333333"
            android:textSize="36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alipay_activity_account"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_title_activity_account"
        android:layout_marginTop="1px"
        android:background="#ffffff">

        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:src="@drawable/account_alipay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88px"
            android:layout_marginTop="20px"
            android:text="支付宝"
            android:textColor="#333333"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88px"
            android:layout_marginTop="60px"
            android:text="推荐支付宝用户使用"
            android:textColor="#999999"
            android:textSize="24px" />

        <ImageView style="@style/personaldata_img_enter" />
    </RelativeLayout>

