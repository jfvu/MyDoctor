<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.md.doctor.ipanelonline.md.doctor.ui.mine.SetPasswordActivity"
    android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_setpassword"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"></LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title_activity_setpassword"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_setpassword">
        <ImageView
            android:id="@+id/img_back_activity_setpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl_pass1"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:layout_below="@id/rl_title_activity_setpassword"
    android:layout_margin="30px"
    android:background="#ffffff">
    <EditText
        android:id="@+id/et_pass1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="请输入密码"
        android:textColorHint="#c1c1c1"
        android:inputType="textPassword"
        android:textSize="32px"
        android:layout_marginLeft="20px"
        android:background="@null"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_pass2"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_pass1"
        android:background="#ffffff"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">
        <EditText
            android:id="@+id/et_pass2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请再次输入密码"
            android:textColorHint="#c1c1c1"
            android:textSize="32px"
            android:layout_marginLeft="20px"
            android:inputType="textPassword"
            android:background="@null"/>
    </RelativeLayout>
    <Button
        android:id="@+id/but_finish_setpassword"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/shape_password"
        android:layout_below="@id/rl_pass2"
        android:layout_marginTop="24px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="完成"
        android:textSize="32px"
        android:textColor="#ffffff"/>
</RelativeLayout>
