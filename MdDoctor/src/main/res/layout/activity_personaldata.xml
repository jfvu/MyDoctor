<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#E1E1E1">
<LinearLayout
    android:id="@+id/ll_statusbar_activity_personaldata"
    android:layout_width="match_parent"
    android:layout_height="40px"
    android:background="#ffffff"
    android:orientation="horizontal">
</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_personaldata"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/ll_statusbar_activity_personaldata"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/img_return_personaldata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:layout_centerVertical="true"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="#333333"
            android:padding="13px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="30px"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rl_title_personaldata"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_head_personaldata"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginTop="17px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="32px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"/>
        <ipanelonline.mobile.survey.view.CircleImageView
            android:id="@+id/img_head_personaldata"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_nickname_personaldata"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_head_personaldata"
        android:layout_marginTop="18px"

        android:background="#ffffff">
        <TextView
            android:text="昵称"
            style="@style/personaldata_font_left"/>
        <EditText
            android:id="@+id/tv_nickname_personaldata"
            android:hint="点击编辑"
            style="@style/personaldata_font_right"
            />
        <ImageView
            style="@style/personaldata_img_enter"
            android:visibility="invisible"/>
    </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_location_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_nickname_personaldata"
                android:layout_marginTop="1px"

                android:background="#ffffff">
                <TextView
                    android:text="地区"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_location_personaldata"
                    android:text="请选择"
                    style="@style/personaldata_font_right"
                    />
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_area_personaldata"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:layout_below="@id/rl_location_personaldata"
    android:layout_marginTop="1px"
    android:visibility="gone"
    android:background="#ffffff">
    <TextView
        android:text="地区"
        style="@style/personaldata_font_left"
        android:id="@+id/textView"/>
    <EditText
        android:id="@+id/tv_area_personaldata"
        android:hint="请选择"
        android:enabled="false"
        style="@style/personaldata_font_right"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />
    <ImageView
        style="@style/personaldata_img_enter"
        android:id="@+id/imageView2"/>
</RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl_name_personaldata"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:layout_below="@id/rl_area_personaldata"
    android:layout_marginTop="1px"
    android:background="#ffffff">
    <TextView
        android:text="姓名"
        style="@style/personaldata_font_left"/>
    <EditText
        android:id="@+id/tv_name_personaldata"
        android:hint="点击编辑"
        style="@style/personaldata_font_right"/>
    <ImageView
        style="@style/personaldata_img_enter"
        android:visibility="invisible"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_birthday_personaldata"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_name_personaldata"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:text="生日"
            style="@style/personaldata_font_left"/>
        <EditText
            android:id="@+id/tv_birthday_personaldata"
            android:hint="请选择"
            android:enabled="false"
            style="@style/personaldata_font_right"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sex_personaldata"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_birthday_personaldata"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:text="性别"
            style="@style/personaldata_font_left"/>
        <TextView
            android:id="@+id/tv_sex_personaldata"
            android:hint="请选择"
            style="@style/personaldata_font_right"/>
        <ImageView
            style="@style/personaldata_img_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone_personaldata"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_sex_personaldata"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:text="手机"
            style="@style/personaldata_font_left"/>
        <EditText
            android:id="@+id/tv_phone_personaldata"
            android:hint="点击编辑"
            style="@style/personaldata_font_right"/>
        <ImageView
            style="@style/personaldata_img_enter"
            android:visibility="invisible"/>
    </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_mail_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_phone_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="Email"
                    style="@style/personaldata_font_left"/>
                <EditText
                    android:id="@+id/tv_mail_personaldata"
                    android:hint="点击编辑"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_address_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_mail_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="现居住地址"
                    style="@style/personaldata_font_left"/>
                <EditText
                    android:id="@+id/tv_address_personaldata"
                    android:hint="点击编辑"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_postcode_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_address_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="邮编"
                    style="@style/personaldata_font_left"/>
                <EditText
                    android:id="@+id/tv_postcode_personaldata"
                    android:hint="点击编辑"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_industry_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_postcode_personaldata"
                android:layout_marginTop="24px"
                android:background="#ffffff">
                <TextView
                    android:text="行业"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_industry_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_education_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_industry_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="教育"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_education_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_position_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_education_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="职位"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_position_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_salary_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_position_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="月薪"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_salary_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_nature_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_salary_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="单位性质"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_nature_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_scale_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_nature_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="单位规模"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_scale_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_status_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_scale_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="工作状态"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_status_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_income_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_status_personaldata"
                android:layout_marginTop="1px"
                android:background="#ffffff">
                <TextView
                    android:text="家庭月收入"
                    style="@style/personaldata_font_left"/>
                <TextView
                    android:id="@+id/tv_income_personaldata"
                    android:hint="请选择"
                    style="@style/personaldata_font_right"/>
                <ImageView
                    style="@style/personaldata_img_enter"/>
            </RelativeLayout>
            <Button
                android:id="@+id/but_submit_personaldata"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/rl_income_personaldata"
                android:background="#1b2865"
                android:text="提交"
                android:textSize="36px"
                android:textColor="#ffffff"
                android:visibility="gone"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>