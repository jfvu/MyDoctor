<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E1E1E1"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_idea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_idea"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_idea">
        <ImageView
            android:id="@+id/img_back_activity_idea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_show_activity_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入您的意见反馈，我们将第一时间为您解决"
        android:textColor="#c1c1c1"
        android:textSize="24px"
        android:gravity="center"
        android:layout_below="@id/rl_title_activity_idea"
        android:layout_marginLeft="24px"
        android:layout_marginTop="25px"/>
    <EditText
        android:id="@+id/et_input_activity_idea"
        android:layout_width="match_parent"
        android:layout_height="428px"
        android:background="#ffffff"
        android:layout_below="@id/tv_show_activity_idea"
        android:layout_marginTop="16px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:textSize="24px"
        android:gravity="start"
        />
    <Button
        android:id="@+id/but_submit_activity_idea"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@drawable/shape_but_radius"
        android:layout_below="@id/et_input_activity_idea"
        android:text="提交"
        android:textSize="36px"
        android:textColor="#ffffff"
        android:layout_marginTop="24px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        />
</RelativeLayout>