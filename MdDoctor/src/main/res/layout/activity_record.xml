<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.md.doctor.ipanelonline.md.doctor.ui.home.RecordActivity"
    android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_record"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_record"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_record">
        <ImageView
            android:id="@+id/img_back_activity_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现记录"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_alipay_activity_record"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_title_activity_record"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/account_alipay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="32px"
            android:textColor="#333333"
            android:layout_marginLeft="88px"
            android:layout_marginTop="20px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐支付宝用户使用"
            android:textColor="#999999"
            android:textSize="24px"
            android:layout_marginTop="60px"
            android:layout_marginLeft="88px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+500.00"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19px"
            android:layout_marginRight="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1000积分"
            android:textColor="#FFA801"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="63px"
            android:layout_marginRight="24px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_wechat_activity_record"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_alipay_activity_record"
        android:background="#ffffff"
        android:layout_marginTop="1px"
        android:visibility="gone">
        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/account_wechat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="32px"
            android:textColor="#333333"
            android:layout_marginLeft="88px"
            android:layout_marginTop="20px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐微信用户使用"
            android:textColor="#999999"
            android:textSize="24px"
            android:layout_marginTop="60px"
            android:layout_marginLeft="88px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+500.00"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19px"
            android:layout_marginRight="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1000积分"
            android:textColor="#FFA801"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="63px"
            android:layout_marginRight="24px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone_activity_record"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_wechat_activity_record"
        android:background="#ffffff"
        android:layout_marginTop="1px"
        android:visibility="gone">
        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/account_phonepay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机充值"
            android:textSize="32px"
            android:textColor="#333333"
            android:layout_marginLeft="88px"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+500.00"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19px"
            android:layout_marginRight="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1000积分"
            android:textColor="#FFA801"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="63px"
            android:layout_marginRight="24px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_paypal_activity_record"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_phone_activity_record"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/account_paypal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:textSize="32px"
            android:textColor="#333333"
            android:layout_marginLeft="88px"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+500.00"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19px"
            android:layout_marginRight="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1000积分"
            android:textColor="#FFA801"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="63px"
            android:layout_marginRight="24px"/>
    </RelativeLayout>
</RelativeLayout>
