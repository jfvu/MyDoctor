<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_chat"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:id="@+id/rl_title_activity_chat"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_chat">
        <ImageView
            android:id="@+id/img_back_activity_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:id="@+id/tv_name_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某某"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f3f3f3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f7">
        <ImageView
            android:id="@+id/img_recoud_chat"
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/chat_yuyin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@drawable/shape_etbg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="144px">
            <EditText
                android:id="@+id/et_input_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                />

            <TextView
                android:id="@+id/voice_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corners_edit"
                android:gravity="center"
                android:minHeight="36dp"
                android:text="按住说话"
                android:visibility="gone" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/img_add_chat"
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/chat_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80px"/>
        <ImageView
            android:id="@+id/img_send_chat"
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/chat_send"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <RelativeLayout
        android:id="@+id/emotion_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ipanelonline.mobile.survey.view.im.NoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>
