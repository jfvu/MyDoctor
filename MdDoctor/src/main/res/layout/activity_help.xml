<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_help"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_help"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_help">
        <ImageView
            android:id="@+id/img_back_activity_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助中心"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/elv_show_activity_help"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title_activity_help"
        android:layout_marginTop="16px"></ExpandableListView>
</RelativeLayout>