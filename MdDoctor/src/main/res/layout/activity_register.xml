<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_register"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_register"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_register">
        <ImageView
            android:id="@+id/img_back_activity_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册新用户"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="32px"
        android:textColor="#333333"
        android:layout_below="@id/rl_title_activity_register"
        android:layout_marginTop="55px"
        android:layout_marginLeft="30px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_title_activity_register"
        android:layout_marginTop="30px"
        android:layout_marginLeft="158.8px"
        android:layout_marginRight="31.2px"
        android:background="#ffffff">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColorHint="#c1c1c1"
            android:textSize="32px"
            android:layout_marginLeft="21.2px"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="32px"
        android:textColor="#333333"
        android:layout_below="@id/rl_title_activity_register"
        android:layout_marginTop="178px"
        android:layout_marginLeft="30px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_title_activity_register"
        android:layout_marginTop="150px"
        android:layout_marginLeft="158.8px"
        android:layout_marginRight="31.2px"
        android:background="#ffffff">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:textColorHint="#c1c1c1"
            android:textSize="32px"
            android:layout_marginLeft="21.2px"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textSize="32px"
        android:textColor="#333333"
        android:layout_below="@id/rl_title_activity_register"
        android:layout_marginTop="298px"
        android:layout_marginLeft="30px"/>
    <RelativeLayout
        android:id="@+id/rl_code_activity_register"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_title_activity_register"
        android:layout_marginTop="270px"
        android:layout_marginLeft="158.8px"
        android:layout_marginRight="31.2px"
        android:background="#ffffff">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="#c1c1c1"
            android:textSize="32px"
            android:layout_marginLeft="21.2px"/>
        <Button
            android:id="@+id/but_code"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:background="@drawable/shape_code"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18.8px"
            android:text="获取验证码"
            android:textSize="24px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <Button
        android:id="@+id/but_register"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/shape_register"
        android:layout_below="@id/rl_code_activity_register"
        android:layout_marginTop="32px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="注册"
        android:enabled="true"
        android:textColor="#ffffff"
        android:textSize="32px"
        />
    <TextView
        android:id="@+id/tv_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册，表示你同意会员调查软件许可及服务协议"
        android:layout_below="@id/but_register"
        android:textColor="#999999"
        android:textSize="20px"
        android:layout_marginTop="24px"
        android:autoLink="all"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>