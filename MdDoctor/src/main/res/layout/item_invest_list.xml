<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="24px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30px">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64px">

                <ImageView
                    android:id="@+id/img_invest_icon"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@drawable/invest_icon"
                    android:layout_margin="14px"/>

                <TextView
                    android:id="@+id/tv_invser_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线调查"
                    android:textSize="32px"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/img_invest_icon"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_invser_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-07-13"
                    android:textSize="30px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14px"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#cecbcb"/>

            <TextView
                android:id="@+id/tv_invser_item_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="7px"
                android:textColor="#3b3939"
                android:textSize="32px"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="据中国航天科技集团最新消息说，2017年6月19日我国在西昌卫星中心用长征3号运载火箭发射据中国航天科技集团最新消息说，团最新消息说"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v7.widget.CardView>

</com.zhy.autolayout.AutoLinearLayout>