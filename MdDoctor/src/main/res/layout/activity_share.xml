<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_share"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:id="@+id/rl_title_activity_share"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_share">
        <ImageView
            android:id="@+id/img_back_activity_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享iPanel"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/share_bg"
        android:layout_below="@id/rl_title_activity_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="461px"
            android:src="@drawable/share_share"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75px"
            android:id="@+id/imageView"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成功邀请好友，即可获得"
            android:textColor="#f65931"
            android:textSize="32px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="599px"
            />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/tv"
           android:layout_marginTop="40px"
           android:id="@+id/linearLayout2">
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:gravity="center"
                android:textSize="144px"
                android:textColor="#f65931"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-35px"/>
            <ImageView
                android:layout_width="47.9px"
                android:layout_height="47.9px"
                android:src="@drawable/share_p"
                android:layout_marginTop="22px"
                android:layout_gravity="bottom"/>
       </LinearLayout>

        <TextView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友"
            android:textColor="#ffffff"
            android:background="@drawable/share_bt"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            android:paddingLeft="80px"
            android:paddingRight="80px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:textSize="18sp"/>
    </RelativeLayout>




</RelativeLayout>
