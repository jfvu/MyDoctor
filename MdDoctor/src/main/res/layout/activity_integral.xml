<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_account"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_integral_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分"
            android:layout_centerInParent="true"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/tv_intagral_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="提现"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:textSize="36px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/title"
        android:background="@color/home_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e2dbca"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/integral_bg_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="128px"
                android:orientation="vertical"
                android:layout_marginTop="72px"
                android:layout_marginBottom="100px"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_intagral_jf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="60px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用积分"
                    android:textColor="@color/white"
                    android:textSize="36px"
                    android:layout_marginTop="18px"/>

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px">
                    <LinearLayout
                        android:id="@+id/llay_integral_dc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:layout_marginTop="18px"
                            android:src="@drawable/integral_tc"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="36px"
                            android:text="调查"
                            android:layout_marginTop="16px"/>

                        <TextView
                            android:id="@+id/tv_dc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="48px"
                            android:text="0"
                            android:layout_marginTop="16px"
                            android:layout_marginBottom="18px"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llay_intagral_qd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="20px">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:layout_marginTop="18px"
                            android:src="@drawable/intergral_qd"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="36px"
                            android:text="签到"
                            android:layout_marginTop="16px"/>

                        <TextView
                            android:id="@+id/tv_intagral_qd_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="48px"
                            android:text="0"
                            android:layout_marginTop="16px"
                            android:layout_marginBottom="18px"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px">
                    <LinearLayout
                        android:id="@+id/llay_intagral_tj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:layout_marginTop="18px"
                            android:src="@drawable/intergral_tj"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="36px"
                            android:text="推荐"
                            android:layout_marginTop="16px"/>

                        <TextView
                            android:id="@+id/tv_intagral_tj_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="48px"
                            android:text="0"
                            android:layout_marginTop="16px"
                            android:layout_marginBottom="18px"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llay_intagral_rj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="20px">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:layout_marginTop="18px"
                            android:src="@drawable/intergral_fl"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="36px"
                            android:text="返利"
                            android:layout_marginTop="16px"/>

                        <TextView
                            android:id="@+id/tv_rj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="48px"
                            android:text="0"
                            android:layout_marginTop="16px"
                            android:layout_marginBottom="18px"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px">
                    <LinearLayout
                        android:id="@+id/llay_intagral_fl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:layout_marginTop="18px"
                            android:src="@drawable/intergral_tx1"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="36px"
                            android:text="提现"
                            android:layout_marginTop="16px"/>

                        <TextView
                            android:id="@+id/tv_intagral_fl_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="48px"
                            android:text="0"
                            android:layout_marginTop="16px"
                            android:layout_marginBottom="18px"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llay_intagral_tx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="20px">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:layout_marginTop="18px"
                            android:src="@drawable/integer_qt1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="36px"
                            android:text="其他"
                            android:layout_marginTop="16px"/>

                        <TextView
                            android:id="@+id/tv_intagral_tx_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="48px"
                            android:text="0"
                            android:layout_marginTop="16px"
                            android:layout_marginBottom="18px"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
