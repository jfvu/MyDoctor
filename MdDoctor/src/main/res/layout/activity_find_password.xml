<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1">
    <LinearLayout
        android:id="@+id/ll_statusbar_activity_findpassword"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:id="@+id/rl_title_activity_findpassword"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        android:layout_below="@id/ll_statusbar_activity_findpassword">
        <ImageView
            android:id="@+id/img_back_activity_findpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personaldata_return"
            android:padding="28px"
            android:layout_marginLeft="4px"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="36px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl_find1"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:layout_below="@id/rl_title_activity_findpassword"
    android:background="#ffffff"
    android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">
    <EditText
        android:id="@+id/et_find1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="请输入手机号"
        android:textColorHint="#c1c1c1"
        android:textSize="32px"
        android:inputType="number"
        android:layout_marginLeft="20px"
        android:background="@null"
        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_find3"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_find1"
        android:background="#ffffff"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">
        <EditText
            android:id="@+id/et_find3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:textColorHint="#c1c1c1"
            android:textSize="32px"
            android:inputType="textPassword"
            android:layout_marginLeft="20px"
            android:background="@null"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_pass1"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_find3"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#ffffff">
        <EditText
            android:id="@+id/et_pass1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请再次输入密码"
            android:textColorHint="#c1c1c1"
            android:inputType="textPassword"
            android:textSize="32px"
            android:layout_marginLeft="20px"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_find2"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@id/rl_pass1"
        android:background="#ffffff"

        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">
        <EditText
            android:id="@+id/et_find2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:textColorHint="#c1c1c1"
            android:textSize="32px"
            android:layout_marginLeft="20px"
            android:background="@null"
            />
        <Button
            android:id="@+id/but_code_find"
            android:layout_width="wrap_content"
            android:layout_height="72px"
            android:background="@drawable/shape_code"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/but_next_find"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@id/rl_find2"
        android:layout_margin="30px"
        android:text="确定"
        android:textSize="32px"
        android:textColor="#ffffff"
        android:background="@drawable/shape_register"
        />
</RelativeLayout>
